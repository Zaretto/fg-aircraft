            <file>Nasal/M_frame_notification.nas</file>
        </notifications>
        <aircraft>
            <file>Nasal/M_exec.nas</file>
        </aircraft>
        <dual_control>
            <file>Aircraft/Generic/DualControl/copilot-dual-control.nas</file>
        </dual_control>
        <armament>
            <file>Aircraft/F-15/Nasal/fox2.nas</file>
        </armament>
        <vector>
            <file>Aircraft/F-15/Nasal/vector.nas</file>
        </vector>
        <rcs>
            <file>Aircraft/F-15/Nasal/rcs.nas</file>
        </rcs>
        <BS_instruments>
            <file>Nasal/back-seat-instruments.nas</file>
        </BS_instruments>
