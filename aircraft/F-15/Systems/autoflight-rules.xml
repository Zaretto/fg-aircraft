<?xml version="1.0"?>

<!-- McDonnell Douglas F-15 Autoflight System -->
<!-- (c) 2018 Joshua Davidson (it0uchpods) -->

<PropertyList>
	
	<!-- No way to move these to JSB -->
	<logic>
		<input>
			<or>
				<equals>
					<property>/autopilot/locks/heading</property>
					<value>wing-leveler</value>
				</equals>
				<equals>
					<property>/autopilot/locks/heading</property>
					<value>dg-heading-hold</value>
				</equals>
				<equals>
					<property>/autopilot/locks/heading</property>
					<value>true-heading-hold</value>
				</equals>
			</or>
		</input>
		<output>/fdm/jsbsim/autoflight/input/roll-switch</output>
	</logic>
	
	<logic>
		<input>
			<or>
				<equals>
					<property>/autopilot/locks/heading</property>
					<value>dg-heading-hold</value>
				</equals>
				<equals>
					<property>/autopilot/locks/heading</property>
					<value>true-heading-hold</value>
				</equals>
			</or>
		</input>
		<output>/fdm/jsbsim/autoflight/input/hdg-active</output>
	</logic>
	
	<logic>
		<input>
			<or>
				<equals>
					<property>/autopilot/locks/altitude</property>
					<value>pitch-hold</value>
				</equals>
				<equals>
					<property>/autopilot/locks/altitude</property>
					<value>vertical-speed-hold</value>
				</equals>
				<equals>
					<property>/autopilot/locks/altitude</property>
					<value>altitude-hold</value>
				</equals>
			</or>
		</input>
		<output>/fdm/jsbsim/autoflight/input/pitch-switch</output>
	</logic>
	
	<logic>
		<input>
			<or>
				<equals>
					<property>/autopilot/locks/altitude</property>
					<value>vertical-speed-hold</value>
				</equals>
				<equals>
					<property>/autopilot/locks/altitude</property>
					<value>altitude-hold</value>
				</equals>
			</or>
		</input>
		<output>/fdm/jsbsim/autoflight/input/vs-active</output>
	</logic>
	
	<filter>
		<name>HEADING MAGNETIC SYNC</name>
		<debug>false</debug>
		<type>gain</type>
		<gain>1.0</gain>
		<enable>
			<condition>
				<or>
					<not-equals>
						<property>/autopilot/locks/heading</property>
						<value>dg-heading-hold</value>
					</not-equals>
					<not-equals>
						<property>/fdm/jsbsim/autoflight/output/roll-master</property>
						<value>1</value>
					</not-equals>
				</or>
			</condition>
		</enable>
		<input>
			<expression>
				<floor>
					<sum>
						<property>/orientation/heading-magnetic-deg</property>
						<value>0.5</value> <!-- Make it rounded correctly -->
					</sum>
				</floor>
			</expression>
		</input>
		<output>/autopilot/settings/heading-bug-deg</output>
	</filter>
	
	<filter>
		<name>HEADING TRUE SYNC</name>
		<debug>false</debug>
		<type>gain</type>
		<gain>1.0</gain>
		<enable>
			<condition>
				<or>
					<not-equals>
						<property>/autopilot/locks/heading</property>
						<value>true-heading-hold</value>
					</not-equals>
					<not-equals>
						<property>/fdm/jsbsim/autoflight/output/roll-master</property>
						<value>1</value>
					</not-equals>
				</or>
			</condition>
		</enable>
		<input>
			<expression>
				<floor>
					<sum>
						<property>/orientation/heading-deg</property>
						<value>0.5</value> <!-- Make it rounded correctly -->
					</sum>
				</floor>
			</expression>
		</input>
		<output>/autopilot/settings/true-heading-deg</output>
	</filter>
	
	<filter>
		<name>DRIFT ANGLE</name>
		<type>gain</type>
		<gain>1.0</gain>
		<input>/orientation/track-magnetic-deg</input>
		<reference>/orientation/heading-magnetic-deg</reference>
		<output>/fdm/jsbsim/autoflight/roll/drift-angle</output>
		<period>
			<min>-180</min>
			<max>180</max>
		</period>
	</filter>
	
	<filter>
		<name>HEADING ERROR DEG</name>
		<debug>false</debug>
		<type>gain</type>
		<gain>1.0</gain>
		<input>
			<condition>
				<and>
					<equals>
						<property>/autopilot/locks/heading</property>
						<value>true-heading-hold</value>
					</equals>
					<equals>
						<property>/autopilot/settings/gps-driving-true-heading</property>
						<value>1</value>
					</equals>
				</and>
			</condition>
			<expression>
				<sum>
					<property>/autopilot/route-manager/wp[0]/true-bearing-deg</property>
					<product>
						<property>/fdm/jsbsim/autoflight/roll/drift-angle</property>
						<value>-1</value>
					</product>
					<product>
						<property>/orientation/heading-deg</property>
						<value>-1</value>
					</product>
				</sum>
			</expression>
		</input>
		<input>
			<condition>
				<and>
					<equals>
						<property>/autopilot/locks/heading</property>
						<value>true-heading-hold</value>
					</equals>
					<not-equals>
						<property>/autopilot/settings/gps-driving-true-heading</property>
						<value>1</value>
					</not-equals>
				</and>
			</condition>
			<property>/autopilot/settings/true-heading-deg</property>
			<offset>
				<property>/orientation/heading-deg</property>
				<scale>-1.0</scale>
			</offset>
		</input>
		<input>
			<property>/autopilot/settings/heading-bug-deg</property>
			<offset>
				<property>/orientation/heading-magnetic-deg</property>
				<scale>-1.0</scale>
			</offset>
		</input>
		<output>/fdm/jsbsim/autoflight/roll/heading-error-deg</output>
		<period>
			<min>-180</min>
			<max>180</max>
		</period>
	</filter>
	
	<filter>
		<name>ALTITUDE SYNC</name>
		<debug>false</debug>
		<type>gain</type>
		<gain>1.0</gain>
		<enable>
			<condition>
				<or>
					<not-equals>
						<property>/autopilot/locks/altitude</property>
						<value>altitude-hold</value>
					</not-equals>
					<not-equals>
						<property>/fdm/jsbsim/autoflight/output/pitch-master</property>
						<value>1</value>
					</not-equals>
				</or>
			</condition>
		</enable>
		<input>
			<expression>
				<product>
					<floor>
						<div>
							<sum>
								<property>/fdm/jsbsim/autoflight/pitch/alt/predicted</property>
								<value>50</value>
							</sum>
							<value>100</value>
						</div>
					</floor>
					<value>100</value>
				</product>
			</expression>
		</input>
		<output>/autopilot/settings/target-altitude-ft</output>
		<min>0</min>
		<max>100000</max>
	</filter>
	
	<filter>
		<name>V/S SYNC</name>
		<debug>false</debug>
		<type>gain</type>
		<gain>1.0</gain>
		<enable>
			<condition>
				<or>
					<not-equals>
						<property>/autopilot/locks/altitude</property>
						<value>vertical-speed-hold</value>
					</not-equals>
					<not-equals>
						<property>/fdm/jsbsim/autoflight/output/pitch-master</property>
						<value>1</value>
					</not-equals>
				</or>
			</condition>
		</enable>
		<input>
			<expression>
				<product>
					<floor>
						<div>
							<sum>
								<property>/instrumentation/gps/indicated-vertical-speed</property>
								<value>50</value>
							</sum>
							<value>100</value>
						</div>
					</floor>
					<value>100</value>
				</product>
			</expression>
		</input>
		<output>/autopilot/settings/vertical-speed-fpm</output>
		<min>-6000</min>
		<max>6000</max>
	</filter>
	
	<filter>
		<name>PITCH DEG SYNC</name>
		<type>gain</type>
		<gain>1.0</gain>
		<enable>
			<condition>
				<or>
					<not-equals>
						<property>/fdm/jsbsim/autoflight/output/pitch-master</property>
						<value>1</value>
					</not-equals>
					<not-equals>
						<property>/fdm/jsbsim/autoflight/input/vs-active</property>
						<value>1</value>
					</not-equals>
				</or>
			</condition>
		</enable>
		<input>/orientation/pitch-deg</input>
		<output>/fdm/jsbsim/autoflight/pitch/vs/pid</output>
		<min>-15</min>
		<max>30</max>
	</filter>
 
	<pid-controller>
		<name>FPM HOLD</name>
		<debug>false</debug>
		<enable>
			<condition>
				<and>
					<equals>
						<property>/fdm/jsbsim/autoflight/output/pitch-master</property>
						<value>1</value>
					</equals>
					<equals>
						<property>/fdm/jsbsim/autoflight/input/vs-active</property>
						<value>1</value>
					</equals>
				</and>
			</condition>
		</enable>
		<input>
			<property>/instrumentation/gps/indicated-vertical-speed</property>
		</input>
		<reference>
			<condition>
				<equals>
					<property>/autopilot/locks/altitude</property>
					<value>altitude-hold</value>
				</equals>
			</condition>
			<property>/fdm/jsbsim/autoflight/pitch/alt/vs-target</property>
		</reference>
		<reference>
			<property>/autopilot/settings/vertical-speed-fpm</property>
		</reference>
		<output>
			<property>/fdm/jsbsim/autoflight/pitch/vs/pid</property>
		</output>
		<config>
			<Kp>
				<expression>
					<table>
						<property>/fdm/jsbsim/velocities/vc-kts</property>
						<entry><ind>130</ind><dep>0.0029</dep></entry>
						<entry><ind>600</ind><dep>0.0009</dep></entry>
						<entry><ind>950</ind><dep>0.0003</dep></entry>
					</table>
				</expression>
			</Kp>
			<Ti>2.0</Ti>
			<Td>0.0001</Td>
			<u_min>
				<condition>
					<and>
						<equals>
							<property>gear/gear[1]/wow</property>
							<value>0</value>
						</equals>
						<equals>
							<property>gear/gear[2]/wow</property>
							<value>0</value>
						</equals>
					</and>
				</condition>
				<expression>
					<max>
						<dif>
							<property>/orientation/pitch-deg</property>
							<value>5</value>
						</dif>
						<value>-15</value>
						<sum> <!-- Limit AoA -->
							<property>/fdm/jsbsim/autoflight/pitch/fpa</property>
							<property>/fdm/jsbsim/autoflight/pitch/alpha-limit-min</property>
						</sum>
					</max>
				</expression>
			</u_min>
			<u_min>
				<condition>
					<or>
						<equals>
							<property>gear/gear[1]/wow</property>
							<value>1</value>
						</equals>
						<equals>
							<property>gear/gear[2]/wow</property>
							<value>1</value>
						</equals>
					</or>
				</condition>
				<value>0</value>
			</u_min>
			<u_max>
				<condition>
					<and>
						<equals>
							<property>gear/gear[1]/wow</property>
							<value>0</value>
						</equals>
						<equals>
							<property>gear/gear[2]/wow</property>
							<value>0</value>
						</equals>
					</and>
				</condition>
				<expression>
					<min>
						<sum>
							<property>/orientation/pitch-deg</property>
							<value>5</value>
						</sum>
						<value>30</value>
						<sum> <!-- Limit AoA -->
							<property>/fdm/jsbsim/autoflight/pitch/fpa</property>
							<property>/fdm/jsbsim/autoflight/pitch/alpha-limit-max</property>
						</sum>
					</min>
				</expression>
			</u_max>
			<u_max>
				<condition>
					<or>
						<equals>
							<property>gear/gear[1]/wow</property>
							<value>1</value>
						</equals>
						<equals>
							<property>gear/gear[2]/wow</property>
							<value>1</value>
						</equals>
					</or>
				</condition>
				<value>10</value>
			</u_max>
		</config>
	</pid-controller>

 <!-- =============================================================== -->
 <!-- Velocity Modes                                                  -->
 <!-- =============================================================== -->

	<pid-controller>
		<name>Autothrottle knots</name>
		<debug>false</debug>
		<enable>
			<condition>
				<not>
					<or>
						<property>/gear/gear[0]/wow</property>
						<property>/gear/gear[1]/wow</property>
						<property>/gear/gear[2]/wow</property>
					</or>
				</not>
				<equals>
					<property>autopilot/locks/speed</property>
					<value>speed-with-throttle</value>
				</equals>
				<greater-than>
					<property>/autopilot/settings/target-speed-kt</property>
					<value>3</value>
				</greater-than>
			</condition>
		</enable>
		<input>
			<property>/instrumentation/airspeed-indicator/indicated-speed-kt</property>
		</input>
		<reference>
			<property>/autopilot/settings/target-speed-kt</property>
		</reference>
		<output>
			<property>/controls/engines/throttle-pid</property>
		</output>
		<config>
			<Kp>0.1</Kp>
			<beta>1.0</beta>
			<alpha>0.1</alpha>
			<gamma>0.0</gamma>
			<Ti>10.0</Ti>
			<Td>0.00001</Td>
			<u_min>0.081</u_min>
			<u_max>
				<condition>
					<equals>
						<property>/autopilot/locks/autothrottle-permit-augmentation</property>
						<value>1</value>
					</equals>
				</condition>
				<value>4.0</value>
			</u_max>
			<u_max>1.0</u_max>
		</config>
	</pid-controller>

	<pid-controller>
		<name>Autothrottle mach</name>
		<debug>false</debug>
		<enable>
			<condition>
				<not>
					<or>
						<property>/gear/gear[0]/wow</property>
						<property>/gear/gear[1]/wow</property>
						<property>/gear/gear[2]/wow</property>
					</or>
				</not>
				<equals>
					<property>autopilot/locks/speed</property>
					<value>speed-with-throttle</value>
				</equals>
				<less-than-equals>
					<property>/autopilot/settings/target-speed-kt</property>
					<value>3</value>
				</less-than-equals>
			</condition>
		</enable>
		<input>
			<property>/instrumentation/airspeed-indicator/indicated-mach</property>
		</input>
		<reference>
			<property>/autopilot/settings/target-speed-kt</property>
		</reference>
		<output>
			<property>/controls/engines/throttle-pid</property>
		</output>
		<config>
			<Kp>50</Kp>
			<beta>1.0</beta>
			<alpha>0.1</alpha>
			<gamma>0.0</gamma>
			<Ti>10.0</Ti>
			<Td>0.00001</Td>
			<u_min>0.081</u_min>
			<u_max>
				<condition>
					<equals>
						<property>/autopilot/locks/autothrottle-permit-augmentation</property>
						<value>1</value>
					</equals>
				</condition>
				<value>4.0</value>
			</u_max>
			<u_max>1.0</u_max>
		</config>
	</pid-controller>

	<filter>
		<name>IT-CONTROLLER: Throttle Fixer</name> <!-- Fixes the output so the autothrottle can be smooth in afterburner -->
		<type>gain</type>
		<gain>1.0</gain>
		<enable>
			<condition>
				<not>
					<or>
						<property>/gear/gear[0]/wow</property>
						<property>/gear/gear[1]/wow</property>
						<property>/gear/gear[2]/wow</property>
					</or>
				</not>
				<equals>
					<property>autopilot/locks/speed</property>
					<value>speed-with-throttle</value>
				</equals>
			</condition>
		</enable>
		<input>
			<expression>
				<table>
					<property>/controls/engines/throttle-pid</property>
					<entry><ind>0.0</ind><dep>0.00000</dep></entry>
					<entry><ind>1.0</ind><dep>0.91722</dep></entry>
					<entry><ind>4.0</ind><dep>1.00000</dep></entry>
				</table>
			</expression>
		</input>
		<output>
			<property>/controls/engines/engine[0]/throttle</property>
			<property>/controls/engines/engine[1]/throttle</property>
		</output>
	</filter>

</PropertyList>
