<PropertyList>

 <!-- =============================================================== -->
 <!-- Predictors                                                      -->
 <!-- =============================================================== -->

	<predict-simple>
		<name>ALTITUDE 2 SECONDS AHEAD</name>
		<debug>false</debug>
		<input>/instrumentation/altimeter/indicated-altitude-ft</input>
		<output>/autopilot/internal/altitude-2-sec-ahead</output>
		<seconds>2.0</seconds>
		<filter-gain>0.0</filter-gain>
	</predict-simple>

 <!-- =============================================================== -->
 <!-- Autopilot Helpers                                               -->
 <!-- =============================================================== -->

	<filter>
		<name>Magnetic Heading Error Normalizer</name>
		<type>gain</type>
		<gain>1</gain>
		<input>/autopilot/internal/heading-bug-error-deg</input>
		<output>/autopilot/internal/heading-bug-error-deg-norm</output>
		<min>-30</min>
		<max>30</max>
	</filter>
	
	<filter>
		<name>True Heading Error Normalizer</name>
		<type>gain</type>
		<gain>1</gain>
		<input>/autopilot/internal/true-heading-error-deg</input>
		<output>/autopilot/internal/true-heading-error-deg-norm</output>
		<min>-30</min>
		<max>30</max>
	</filter>
	
	<filter>
		<name>Aileron Normalizer</name>
		<type>gain</type>
		<gain>1</gain>
		<input>
			<expression>
				<table>
					<property>/controls/flight/aileron</property>
					<entry><ind>-1.000</ind><dep>-1.0</dep></entry>
					<entry><ind>-0.001</ind><dep>-0.0</dep></entry>
					<entry><ind> 0.000</ind><dep> 0.0</dep></entry>
					<entry><ind> 0.001</ind><dep> 0.0</dep></entry>
					<entry><ind> 1.000</ind><dep> 1.0</dep></entry>
				</table>
			</expression>
		</input>
		<output>/controls/flight/aileron-norm</output>
	</filter>
	
	<filter>
		<name>Elevator Normalizer</name>
		<type>gain</type>
		<gain>1</gain>
		<input>
			<expression>
				<table>
					<property>/controls/flight/elevator</property>
					<entry><ind>-1.000</ind><dep>-1.0</dep></entry>
					<entry><ind>-0.001</ind><dep>-0.0</dep></entry>
					<entry><ind> 0.000</ind><dep> 0.0</dep></entry>
					<entry><ind> 0.001</ind><dep> 0.0</dep></entry>
					<entry><ind> 1.000</ind><dep> 1.0</dep></entry>
				</table>
			</expression>
		</input>
		<output>/controls/flight/elevator-norm</output>
	</filter>

 <!-- =============================================================== -->
 <!-- Lateral Modes                                                   -->
 <!-- =============================================================== -->

	<filter>
		<name>IT-CONTROLLER: HDG KP (P Gain)</name>
		<type>gain</type>
		<gain>1</gain>
		<input>
			<expression>
				<table>
					<property>/velocities/mach</property>
					<entry><ind>0.2</ind><dep>-1.8</dep></entry>
					<entry><ind>1.0</ind><dep>-3.7</dep></entry>
					<entry><ind>1.5</ind><dep>-3.9</dep></entry>
					<entry><ind>2.1</ind><dep>-4.1</dep></entry>
				</table>
			</expression>
		</input>
		<output>/autopilot/internal/kp-hdg</output>
	</filter>
	
	<filter>
		<name>IT-CONTROLLER: HDG LIMIT</name>
		<type>gain</type>
		<gain>1</gain>
		<input>
			<expression>
				<table>
					<property>/velocities/mach</property>
					<entry><ind>0.2</ind><dep>30</dep></entry>
					<entry><ind>1.0</ind><dep>60</dep></entry>
				</table>
			</expression>
		</input>
		<output>/autopilot/internal/bank-limit</output>
	</filter>

	<pi-simple-controller>
		<name>HEADING MAGNETIC</name>
		<debug>false</debug>
		<enable>
			<condition>
				<equals>
					<property>/autopilot/locks/heading</property>
					<value>dg-heading-hold</value>
				</equals>
			</condition>
		</enable>
		<input>
			<property>/autopilot/internal/heading-bug-error-deg-norm</property>
		</input>
		<reference>
			<value>0.0</value>
		</reference>
		<output>
			<property>/autopilot/internal/target-roll-deg</property>
		</output>
		<config>
			<Kp>
				<property>/autopilot/internal/kp-hdg</property>
			</Kp>
			<Ki>-0.000001</Ki>
			<min>
				<property>/autopilot/internal/bank-limit</property>
				<scale>-1</scale>
			</min>
			<max>
				<property>/autopilot/internal/bank-limit</property>
			</max>
		</config>
	</pi-simple-controller>
	
	<pi-simple-controller>
		<name>HEADING TRUE</name>
		<debug>false</debug>
		<enable>
			<condition>
				<equals>
					<property>/autopilot/locks/heading</property>
					<value>true-heading-hold</value>
				</equals>
			</condition>
		</enable>
		<input>
			<property>/autopilot/internal/true-heading-error-deg-norm</property>
		</input>
		<reference>
			<value>0.0</value>
		</reference>
		<output>
			<property>/autopilot/internal/target-roll-deg</property>
		</output>
		<config>
			<Kp>
				<property>/autopilot/internal/kp-hdg</property>
			</Kp>
			<Ki>-0.000001</Ki>
			<min>
				<property>/autopilot/internal/bank-limit</property>
				<scale>-1</scale>
			</min>
			<max>
				<property>/autopilot/internal/bank-limit</property>
			</max>
		</config>
	</pi-simple-controller>
	
	<filter>
		<name>ROLL DEG SYNC</name>
		<debug>false</debug>
		<type>gain</type>
		<gain>1</gain>
		<enable>
			<condition>
				<and>
					<not-equals>
						<property>/autopilot/locks/heading</property>
						<value>dg-heading-hold</value>
					</not-equals>
					<not-equals>
						<property>/autopilot/locks/heading</property>
						<value>true-heading-hold</value>
					</not-equals>
				</and>
			</condition>
		</enable>
		<input>/orientation/roll-deg</input>
		<output>/autopilot/internal/target-roll-deg</output>
		<min>
			<property>/autopilot/internal/bank-limit</property>
			<scale>-1</scale>
		</min>
		<max>
			<property>/autopilot/internal/bank-limit</property>
		</max>
	</filter>

	<filter>
		<name>IT-CONTROLLER: TARGET ROLL CMD</name>
		<debug>false</debug>
		<feedback-if-disabled>true</feedback-if-disabled>
		<initialize-to>output</initialize-to>
		<input>/autopilot/internal/target-roll-deg</input>
		<output>/autopilot/internal/target-roll</output>
		<type>noise-spike</type>
		<max-rate-of-change>
			<condition>
				<and>
					<or>
						<equals>
							<property>/autopilot/locks/heading</property>
							<value>dg-heading-hold</value>
						</equals>
						<equals>
							<property>/autopilot/locks/heading</property>
							<value>true-heading-hold</value>
						</equals>
					</or>
					<equals>
						<property>/controls/flight/aileron-norm</property>
						<value>0</value>
					</equals>
				</and>
			</condition>
			<value>20</value>
		</max-rate-of-change>
		<max-rate-of-change>10000</max-rate-of-change>
	</filter>

	<filter>
		<name>System Command: Roll Rate</name>
		<debug>false</debug>
		<type>gain</type>
		<gain>-0.09</gain>
		<enable>
			<condition>
				<or>
					<equals>
						<property>/autopilot/locks/heading</property>
						<value>wing-leveler</value>
					</equals>
					<equals>
						<property>/autopilot/locks/heading</property>
						<value>dg-heading-hold</value>
					</equals>
					<equals>
						<property>/autopilot/locks/heading</property>
						<value>true-heading-hold</value>
					</equals>
				</or>
			</condition>
		</enable>
		<input>
			<property>/orientation/roll-deg</property>
		</input>
		<reference>
			<property>/autopilot/internal/target-roll</property>
		</reference>
		<output>
			<property>/autopilot/internal/roll-rate-cmd</property>
		</output>   	
		<min>-0.4</min>
		<max>0.4</max>
	</filter>
	
	<filter>
		<name>IT-CONTROLLER: ROLL RATE CMD</name>
		<type>gain</type>
		<gain>1</gain>
		<input>
			<expression>
				<table>
					<property>/autopilot/internal/roll-rate-cmd</property> 
					<entry><ind>-1</ind><dep>-20.0</dep></entry>
					<entry><ind> 0</ind><dep>  0.0</dep></entry>
					<entry><ind> 1</ind><dep> 20.0</dep></entry>
				</table>
			</expression>
		</input>
		<output>/autopilot/internal/roll-rate</output>
	</filter>
	
	<filter>
		<name>IT-CONTROLLER: ROLL RATE KP (P Gain)</name>
		<type>gain</type>
		<gain>1</gain>
		<input>
			<expression>
				<table>
					<property>/velocities/mach</property>
					<entry><ind>0.2</ind><dep>0.070</dep></entry>
					<entry><ind>1.0</ind><dep>0.005</dep></entry>
					<entry><ind>1.5</ind><dep>0.003</dep></entry>
					<entry><ind>2.1</ind><dep>0.002</dep></entry>
				</table>
			</expression>
		</input>
		<output>/autopilot/internal/kp-roll</output>
	</filter>
	
	<pid-controller>
		<name>IT-CONTROLLER: ROLL</name>
		<debug>false</debug>
		<enable>
			<condition>
				<and>
					<or>
						<equals>
							<property>/autopilot/locks/heading</property>
							<value>wing-leveler</value>
						</equals>
						<equals>
							<property>/autopilot/locks/heading</property>
							<value>dg-heading-hold</value>
						</equals>
						<equals>
							<property>/autopilot/locks/heading</property>
							<value>true-heading-hold</value>
						</equals>
					</or>
					<equals>
						<property>/controls/flight/aileron-norm</property>
						<value>0</value>
					</equals>
				</and>
			</condition>
		</enable>
		<input>
			<property>/orientation/roll-rate-degps</property>
		</input>
		<reference>
			<property>/autopilot/internal/roll-rate</property>
		</reference>
		<output>
			<property>/fdm/jsbsim/fcs/roll-trim-sas-cmd-norm</property>
		</output>
		<config>
			<Kp>
				<property>/autopilot/internal/kp-roll</property>
			</Kp>
			<beta>1</beta>
			<alpha>0.1</alpha>
			<gamma>0</gamma>
			<Ti>0.35</Ti>
			<Td>0.0001</Td>
			<u_min>-0.6</u_min>
			<u_max>0.6</u_max>
		</config>
	</pid-controller>
	
	<filter>
		<name>IT-CONTROLLER: ROLL DEAD</name>
		<type>gain</type>
		<enable>
			<condition>
				<or>
					<and>
						<not-equals>
							<property>/autopilot/locks/heading</property>
							<value>wing-leveler</value>
						</not-equals>
						<not-equals>
							<property>/autopilot/locks/heading</property>
							<value>dg-heading-hold</value>
						</not-equals>
						<not-equals>
							<property>/autopilot/locks/heading</property>
							<value>true-heading-hold</value>
						</not-equals>
					</and>
					<not-equals>
						<property>/controls/flight/aileron-norm</property>
						<value>0</value>
					</not-equals>
				</or>
			</condition>
		</enable>
		<gain>1</gain>
		<input>0</input>
		<output>/fdm/jsbsim/fcs/roll-trim-sas-cmd-norm</output>
	</filter>

 <!-- =============================================================== -->
 <!-- Vertical Modes                                                  -->
 <!-- =============================================================== -->

	<filter>
		<name>ALTITUDE SYNC</name>
		<debug>false</debug>
		<type>gain</type>
		<gain>1</gain>
		<enable>
			<condition>
				<and>
					<equals>
						<property>/autopilot/locks/altitude</property>
						<value>altitude-hold</value>
					</equals>
					<not-equals>
						<property>/controls/flight/elevator-norm</property>
						<value>0</value>
					</not-equals>
				</and>
			</condition>
		</enable>
		<input>
			<expression>
				<product>
					<floor>
						<div>
							<sum>
								<property>/instrumentation/altimeter/indicated-altitude-ft</property>
								<value>50</value>
							</sum>
							<value>100</value>
						</div>
					</floor>
					<value>100</value>
				</product>
			</expression>
		</input>
		<output>/autopilot/settings/target-altitude-ft</output>
		<min>0</min>
		<max>100000</max>
	</filter>

	<filter>
		<name>ALTITUDE CAPTURE/HOLD</name>
		<debug>false</debug>
		<type>gain</type>
		<input>
			<expression>
				<sum>
					<property>/autopilot/internal/altitude-2-sec-ahead</property>
					<value>-5</value>
				</sum>
			</expression>
		</input>
		<reference>
			<property>/autopilot/settings/target-altitude-ft</property>
		</reference>
		<gain>-6</gain>
		<output>
			<property>/autopilot/internal/target-fpm-alt</property>
		</output>
		<min>-2000</min>
		<max>2000</max>
	</filter>

	<filter>
		<name>IT-CONTROLLER: FPM KP (P Gain)</name>
		<type>gain</type>
		<gain>1</gain>
		<input>
			<expression>
				<table>
					<property>/velocities/mach</property>
					<entry><ind>0.2</ind><dep>0.014</dep></entry>
					<entry><ind>1.4</ind><dep>0.005</dep></entry>
				</table>
			</expression>
		</input>
		<output>/autopilot/internal/vs-kp</output>
	</filter>
 
	<pid-controller>
		<name>FPM HOLD</name>
		<debug>false</debug>
		<enable>
			<condition>
				<and>
					<or>
						<equals>
							<property>/autopilot/locks/altitude</property>
							<value>vertical-speed-hold</value>
						</equals>
						<equals>
							<property>/autopilot/locks/altitude</property>
							<value>altitude-hold</value>
						</equals>
					</or>
					<equals>
						<property>/controls/flight/elevator-norm</property>
						<value>0</value>
					</equals>
				</and>
			</condition>
		</enable>
		<input>
			<property>/autopilot/internal/vert-speed-fpm</property>
			<scale>0.16667</scale>
		</input>
		<reference>
			<condition>
				<equals>
					<property>/autopilot/locks/altitude</property>
					<value>vertical-speed-hold</value>
				</equals>
			</condition>
			<property>/autopilot/settings/vertical-speed-fpm</property>
			<scale>0.16667</scale>
		</reference>
		<reference>
			<condition>
				<equals>
					<property>/autopilot/locks/altitude</property>
					<value>altitude-hold</value>
				</equals>
			</condition>
			<property>/autopilot/internal/target-fpm-alt</property>
			<scale>0.16667</scale>
		</reference>
		<output>
			<property>/autopilot/internal/target-pitch-deg</property>
		</output>
		<config>
			<Kp>
				<property>/autopilot/internal/vs-kp</property>
			</Kp>
			<Ti>2.0</Ti>
			<Td>0.0001</Td>
			<u_min>
				<condition>
					<and>
						<equals>
							<property>gear/gear[1]/wow</property>
							<value>0</value>
						</equals>
						<equals>
							<property>gear/gear[2]/wow</property>
							<value>0</value>
						</equals>
					</and>
				</condition>
				<value>-15</value>
			</u_min>
			<u_min>
				<condition>
					<or>
						<equals>
							<property>gear/gear[1]/wow</property>
							<value>1</value>
						</equals>
						<equals>
							<property>gear/gear[2]/wow</property>
							<value>1</value>
						</equals>
					</or>
				</condition>
				<value>0</value>
			</u_min>
			<u_max>
				<condition>
					<and>
						<equals>
							<property>gear/gear[1]/wow</property>
							<value>0</value>
						</equals>
						<equals>
							<property>gear/gear[2]/wow</property>
							<value>0</value>
						</equals>
					</and>
				</condition>
				<value>30</value>
			</u_max>
			<u_max>
				<condition>
					<or>
						<equals>
							<property>gear/gear[1]/wow</property>
							<value>1</value>
						</equals>
						<equals>
							<property>gear/gear[2]/wow</property>
							<value>1</value>
						</equals>
					</or>
				</condition>
				<value>10</value>
			</u_max>
		</config>
	</pid-controller>
	
	<filter>
		<name>PITCH DEG SYNC 2</name>
		<debug>false</debug>
		<type>gain</type>
		<gain>1</gain>
		<enable>
			<condition>
				<or>
					<and>
						<not-equals>
							<property>/autopilot/locks/altitude</property>
							<value>vertical-speed-hold</value>
						</not-equals>
						<not-equals>
							<property>/autopilot/locks/altitude</property>
							<value>altitude-hold</value>
						</not-equals>
					</and>
					<not-equals>
						<property>/controls/flight/elevator-norm</property>
						<value>0</value>
					</not-equals>
				</or>
			</condition>
		</enable>
		<input>/orientation/pitch-deg</input>
		<output>/autopilot/internal/target-pitch-deg</output>
		<min>-30</min>
		<max>45</max>
	</filter>
	
	<filter>
		<name>IT-CONTROLLER: TARGET PITCH CMD</name>
		<debug>false</debug>
		<type>gain</type>
		<gain>1</gain>
		<input>
			<condition>
				<equals>
					<property>/autopilot/locks/altitude</property>
					<value>pitch-hold</value>
				</equals>
			</condition>
			<property>/orientation/pitch-deg</property>
		</input>
		<input>/autopilot/internal/target-pitch-deg</input>
		<output>/autopilot/internal/target-pitch</output>   	
	</filter>

	<filter>
		<name>System Command: Pitch Rate</name>
		<debug>false</debug>
		<type>gain</type>
		<gain>0.15</gain>
		<enable>
			<condition>
				<or>
					<equals>
						<property>/autopilot/locks/altitude</property>
						<value>pitch-hold</value>
					</equals>
					<equals>
						<property>/autopilot/locks/altitude</property>
						<value>vertical-speed-hold</value>
					</equals>
					<equals>
						<property>/autopilot/locks/altitude</property>
						<value>altitude-hold</value>
					</equals>
				</or>
			</condition>
		</enable>
		<input>
			<property>/orientation/pitch-deg</property>
		</input>
		<reference>
			<property>/autopilot/internal/target-pitch</property>
		</reference>
		<output>
			<property>/autopilot/internal/pitch-rate-cmd</property>
		</output>   	
		<min>-0.8</min>
		<max>0.8</max>
	</filter>
	
	<filter>
		<name>IT-CONTROLLER: PITCH RATE CMD</name>
		<type>gain</type>
		<gain>1</gain>
		<input>
			<expression>
				<table>
					<property>/autopilot/internal/pitch-rate-cmd</property> 
					<entry><ind> 1</ind><dep>-6.0</dep></entry>
					<entry><ind> 0</ind><dep> 0.0</dep></entry>
					<entry><ind>-1</ind><dep> 6.0</dep></entry>
				</table>
			</expression>
		</input>
		<output>/autopilot/internal/pitch-rate</output>
	</filter>
	
	<filter>
		<name>IT-CONTROLLER: PITCH RATE KP (P Gain)</name>
		<type>gain</type>
		<gain>1</gain>
		<input>
			<expression>
				<table>
					<property>/velocities/mach</property>
					<entry><ind>0.2</ind><dep>-0.101</dep></entry>
					<entry><ind>1.0</ind><dep>-0.021</dep></entry>
					<entry><ind>2.1</ind><dep>-0.005</dep></entry>
				</table>
			</expression>
		</input>
		<output>/autopilot/internal/kp-pitch</output>
	</filter>
	
	<pid-controller>
		<name>IT-CONTROLLER: PITCH</name>
		<debug>false</debug>
		<enable>
			<condition>
				<and>
					<or>
						<equals>
							<property>/autopilot/locks/altitude</property>
							<value>pitch-hold</value>
						</equals>
						<equals>
							<property>/autopilot/locks/altitude</property>
							<value>vertical-speed-hold</value>
						</equals>
						<equals>
							<property>/autopilot/locks/altitude</property>
							<value>altitude-hold</value>
						</equals>
					</or>
					<equals>
						<property>/controls/flight/elevator-norm</property>
						<value>0</value>
					</equals>
				</and>
			</condition>
		</enable>
		<input>
			<property>/orientation/pitch-rate-degps</property>
		</input>
		<reference>
			<property>/autopilot/internal/pitch-rate</property>
		</reference>
		<output>
			<property>/fdm/jsbsim/systems/afcs/elevator-cmd-delta</property>
		</output>
		<config>
			<Kp>
				<property>/autopilot/internal/kp-pitch</property>
			</Kp>
			<beta>1</beta>
			<alpha>0.1</alpha>
			<gamma>0</gamma>
			<Ti>0.35</Ti>
			<Td>0.0002</Td>
			<u_min>-0.6</u_min>
			<u_max>0.6</u_max>
		</config>
	</pid-controller>
	
	<filter>
		<name>IT-CONTROLLER: PITCH DEAD</name>
		<type>gain</type>
		<enable>
			<condition>
				<and>
					<not-equals>
						<property>/autopilot/locks/altitude</property>
						<value>pitch-hold</value>
					</not-equals>
					<not-equals>
						<property>/autopilot/locks/altitude</property>
						<value>vertical-speed-hold</value>
					</not-equals>
					<not-equals>
						<property>/autopilot/locks/altitude</property>
						<value>altitude-hold</value>
					</not-equals>
				</and>
			</condition>
		</enable>
		<gain>1</gain>
		<input>0</input>
		<output>/fdm/jsbsim/systems/afcs/elevator-cmd-delta</output>
	</filter>

    <!-- =============================================================== -->
    <!-- Velocity Modes                                                  -->
    <!-- =============================================================== -->

    <pid-controller>
        <name>Autothrottle knots</name>
        <debug>false</debug>
        <enable>
            <condition>
                <not>
                    <or>
                        <property>/gear/gear[0]/wow</property>
                        <property>/gear/gear[1]/wow</property>
                        <property>/gear/gear[2]/wow</property>
                    </or>
                </not>
                <equals>
                    <property>autopilot/locks/speed</property>
                    <value>speed-with-throttle</value>
                </equals>
                <greater-than>
                    <property>/autopilot/settings/target-speed-kt</property>
                    <value>2</value>
                </greater-than>
            </condition>
        </enable>
        <input>
            <prop>/instrumentation/airspeed-indicator/indicated-speed-kt</prop>
        </input>
        <reference>
            <prop>/autopilot/settings/target-speed-kt</prop>
        </reference>
        <output>
            <property>/controls/engines/engine[0]/throttle</property>
            <property>/controls/engines/engine[1]/throttle</property>
        </output>
        <config>
            <Kp>0.1</Kp>
            <beta>1.0</beta>
            <alpha>0.1</alpha>
            <gamma>0.0</gamma>
            <Ti>10.0</Ti>
            <Td>0.00001</Td>
            <u_min>0.081</u_min>
            <u_max>0.95</u_max>
            <!-- No afterburner while A/T is on -->
        </config>
    </pid-controller>

    <pid-controller>
        <name>Autothrottle mach</name>
        <debug>false</debug>
        <enable>
            <condition>
                <not>
                    <or>
                        <property>/gear/gear[0]/wow</property>
                        <property>/gear/gear[1]/wow</property>
                        <property>/gear/gear[2]/wow</property>
                    </or>
                </not>
                <equals>
                    <property>autopilot/locks/speed</property>
                    <value>speed-with-throttle</value>
                </equals>
                <less-than-equals>
                    <property>/autopilot/settings/target-speed-kt</property>
                    <value>2</value>
                </less-than-equals>
            </condition>
        </enable>
        <input>
            <prop>/instrumentation/airspeed-indicator/indicated-mach</prop>
        </input>
        <reference>
            <prop>/autopilot/settings/target-speed-kt</prop>
        </reference>
        <output>
            <property>/controls/engines/engine[0]/throttle</property>
            <property>/controls/engines/engine[1]/throttle</property>
        </output>
        <config>
            <Kp>50</Kp>
            <beta>1.0</beta>
            <alpha>0.1</alpha>
            <gamma>0.0</gamma>
            <Ti>10.0</Ti>
            <Td>0.00001</Td>
            <u_min>0.081</u_min>
            <u_max>0.95</u_max>
            <!-- No afterburner while A/T is on -->
        </config>
    </pid-controller>

</PropertyList>
