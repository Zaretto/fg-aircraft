		<switch name="fcs/roll-ratio">
			<default value="fcs/roll-ratio-calc"/>
			<test logic="OR" value="0.5">
				systems/cadc/roll-ratio-emergency ne 0
				systems/hydraulics/flight-system-pressure ne 1
			</test>
			<test value="1.0">
				gear/gear-pos-norm ne 0
			</test>
		</switch>
		
