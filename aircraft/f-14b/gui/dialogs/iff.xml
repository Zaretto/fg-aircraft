<?xml version="1.0" encoding="utf-8"?>

<PropertyList>
    <name>iff</name>
    <modal type="bool">false</modal>
    <layout>vbox</layout>
    <draggable>true</draggable>
    <width>256</width>

    <group>
        <layout>hbox</layout>
        <text><label>IFF Mode 4 Selection</label></text>
        <stretch>1</stretch>
        <button>
            <pref-width>16</pref-width>
            <pref-height>16</pref-height>
            <legend></legend>
            <default>1</default>
            <keynum>27</keynum>
            <border>2</border>
            <binding>
                <command>dialog-close</command>
            </binding>
            <binding>
                <command>dialog-apply</command>
            </binding>
        </button>
    </group>

    <hrule/>

    <input>
        <width>250</width>
        <label>Channel</label>
        <property>instrumentation/iff/channel</property>
        <live>true</live>
        <halight>left</halight>
        <binding>
            <command>dialog-apply</command>
        </binding>
    </input>

    <button>
        <legend>Clear</legend>
        <halign>center</halign>
        <valign>bottom</valign>
        <binding>
            <command>nasal</command>
            <script>
                <![CDATA[setprop("instrumentation/iff/channel", 0000);]]>
            </script>
        </binding>
    </button>

</PropertyList>

