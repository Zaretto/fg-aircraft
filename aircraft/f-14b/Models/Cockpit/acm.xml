	<!-- lighting -->
	<animation> 
		<object-name>mount</object-name>
		<type>material</type>
		<condition><not><property>sim/rendering/rembrandt/enabled</property></not></condition>
		<emission> 
			<factor-prop>controls/lighting/panel-norm</factor-prop>
			<red>0.4</red>
			<green>0.17</green>
			<blue>0.07</blue>
		</emission>
	</animation>
	<animation> 
		<object-name>switches-and-levers</object-name>
		<object-name>sta-disp</object-name>
		<type>material</type>
		<condition><not><property>sim/rendering/rembrandt/enabled</property></not></condition>
		<emission> 
			<factor-prop>controls/lighting/panel-norm</factor-prop>
			<red>0.4</red>
			<green>0.17</green>
			<blue>0.07</blue>
		</emission>
	</animation>
	<animation> 
		<object-name>lights-off</object-name>
		<type>material</type>
		<condition><not><property>sim/rendering/rembrandt/enabled</property></not></condition>
		<emission> 
			<factor-prop>controls/lighting/panel-norm</factor-prop>
			<red>0.275</red>
			<green>0.12</green>
			<blue>0.05</blue>
		</emission>
	</animation>

