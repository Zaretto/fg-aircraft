<?xml version="1.0"?>

<!--Horizontal Situation Display F-14B -->

<PropertyList>
	<path>hsd.ac</path>


	<!-- don't show it when external view -->
	<animation>
		<type>select</type>
		<object-name>hsd</object-name>
		<condition>
			<equals>
				<property>sim/current-view/name</property>
				<value>Cockpit View</value>
			</equals>
		</condition>
	</animation>

	<effect>
		<inherits-from>Effects/model-transparent</inherits-from>
		<object-name>miles-drums-off</object-name>
		<object-name>miles-drum-0</object-name>
		<object-name>miles-drum-1</object-name>
		<object-name>miles-drum-3</object-name>
		<object-name>miles-drum-2</object-name>
		<object-name>rng-label</object-name>
		<object-name>crs-label</object-name>
		<object-name>course-drum-3</object-name>
		<object-name>course-drum-2</object-name>
		<object-name>course-drum-1</object-name>
		<object-name>crs-label</object-name>
		<object-name>tacan-bearing</object-name>
		<object-name>nav-lubber-line</object-name>
		<object-name>aircraft-symbol</object-name>
		<object-name>deviation-marks</object-name>
		<object-name>course-needle</object-name>
		<object-name>deviation-bar</object-name>
		<object-name>compass-rose</object-name>
	</effect>

	<!-- mode selection -->
	<animation>
		<type>select</type>
		<object-name>video</object-name>
		<condition>
			<equals>
				<property>sim/model/f-14b/controls/pilots-displays/hsd-mode-nav</property>
				<value>1</value>
			</equals>
			<property>sim/model/f-14b/controls/HSD/on-off</property>
		</condition>
	</animation>
	<animation>
		<type>select</type>
		<object-name>screen-bkg</object-name>
		<condition>
			<property>sim/model/f-14b/controls/HSD/on-off</property>
		</condition>
	</animation>
	<animation>
		<type>select</type>
		<object-name>screen-bkg-off</object-name>
		<condition>
			<not>
				<property>sim/model/f-14b/controls/HSD/on-off</property>
			</not>
		</condition>
	</animation>


	<!-- NAV MODE -->
	<animation>
		<type>select</type>
		<object-name>compass-rose</object-name>
		<condition>
			<equals>
				<property>sim/model/f-14b/controls/pilots-displays/hsd-mode-nav</property>
				<value>1</value>
			</equals>
		</condition>
	</animation>

	<animation>
		<type>rotate</type>
		<object-name>compass-rose</object-name>
		<property>orientation/heading-magnetic-deg</property>
		<axis><x>1</x></axis>
	</animation>

	<animation>
		<type>rotate</type>
		<object-name>tacan-bearing</object-name>
		<property>orientation/heading-magnetic-deg</property>
		<axis><x>1</x></axis>
	</animation>

	<animation>
		<type>rotate</type>
		<object-name>tacan-bearing</object-name>
		<property>instrumentation/tacan/indicated-mag-bearing-deg</property>
		<axis><x>-1</x></axis>
	</animation>

	<animation>
		<type>select</type>
		<object-name>deviation-bar</object-name>
		<condition>
			<property>instrumentation/tacan/in-range</property>
			<or>
				<equals>
					<property>sim/model/f-14b/instrumentation/tacan/mode</property>
					<value>1</value>
				</equals>
				<equals>
					<property>sim/model/f-14b/instrumentation/tacan/mode</property>
					<value>2</value>
				</equals>
			</or>
		</condition>
	</animation>
	<animation>
		<type>rotate</type>
		<object-name>course-group</object-name>
		<property>orientation/heading-magnetic-deg</property>
		<axis><x>1</x></axis>
	</animation>

	<animation>
		<type>rotate</type>
		<object-name>course-group</object-name>
		<property>instrumentation/nav[1]/radials/selected-deg</property>
		<axis><x>-1</x></axis>
	</animation>

	<animation>
		<type>translate</type>
		<object-name>deviation-bar</object-name>
		<property>sim/model/f-14b/instrumentation/hsd/needle-deflection</property>
		<interpolation>
			<entry><ind>-10</ind><dep>-0.0506</dep></entry>
			<entry><ind>0</ind><dep>0</dep></entry>
			<entry><ind>10</ind><dep>0.0506</dep></entry>
		</interpolation>
		<axis><y>1</y></axis>
	</animation>

	<animation>
		<type>select</type>
		<object-name>miles-drums-off</object-name>
		<condition>
			<not>
				<equals>
					<property>sim/model/f-14b/instrumentation/tacan/mode</property>
					<value>2</value>
				</equals>
			</not>
		</condition>
	</animation>
	<animation>
		<type>select</type>
		<object-name>miles-drums-on</object-name>
		<condition>
			<equals>
				<property>sim/model/f-14b/instrumentation/tacan/mode</property>
				<value>2</value>
			</equals>
		</condition>
	</animation>



	<animation>
		<type>textranslate</type>
		<object-name>miles-drum-0</object-name>
		<property>instrumentation/tacan/indicated-distance-nm</property>
		<factor>1</factor>
		<offset>-0.1</offset>
		<step>0.1</step>
		<axis><y>-1</y></axis>
	</animation>
	<animation>
		<type>textranslate</type>
		<object-name>miles-drum-1</object-name>
		<property>instrumentation/tacan/indicated-distance-nm</property>
		<factor>0.1</factor>
		<offset>-1</offset>
		<step>1</step>
		<axis>
		<x>0</x><y>-1</y></axis>
	</animation>
	<animation>
		<type>textranslate</type>
		<object-name>miles-drum-2</object-name>
		<property>instrumentation/tacan/indicated-distance-nm</property>
		<factor>0.01</factor>
		<offset>-10</offset>
		<step>10</step>
		<axis><y>-1</y></axis>
	</animation>
	<animation>
		<type>textranslate</type>
		<object-name>miles-drum-3</object-name>
		<property>instrumentation/tacan/indicated-distance-nm</property>
		<factor>0.001</factor>
		<offset>-100</offset>
		<step>100</step>
		<axis><y>-1</y></axis>
	</animation>


<!-- course digital display -->
	<animation>
		<type>textranslate</type>
		<object-name>course-drum-1</object-name>
		<property>instrumentation/nav[1]/radials/selected-deg</property>
		<factor>0.1</factor>
		<offset>-1</offset>
		<axis><y>-1</y></axis>
	</animation>
	<animation>
		<type>textranslate</type>
		<object-name>course-drum-2</object-name>
		<property>instrumentation/nav[1]/radials/selected-deg</property>
		<factor>0.01</factor>
		<offset>-10</offset>
		<step>10</step>
		<axis><y>-1</y></axis>
	</animation>
	<animation>
		<type>textranslate</type>
		<object-name>course-drum-3</object-name>
		<property>instrumentation/nav[1]/radials/selected-deg</property>
		<factor>0.001</factor>
		<offset>-100</offset>
		<step>100</step>
		<axis><y>-1</y><z>0</z></axis>
	</animation>


	<!-- lighting -->
	<animation>
		<object-name>screen-bkg</object-name>
		<type>material</type>
		<emission>
			<factor-prop>sim/model/f-14b/controls/VDI/brightness</factor-prop>
			<red>0.0</red>
			<green>0.9</green>
			<blue>0.0</blue>
		</emission>
	</animation>

	<animation>
		<object-name>video</object-name>
		<type>material</type>
		<emission>
			<factor-prop>sim/model/f-14b/controls/VDI/brightness</factor-prop>
			<red>0.0</red>
			<green>0.7</green>
			<blue>0.0</blue>
		</emission>
	</animation>

	<animation>
		<object-name>compass-rose</object-name>
		<type>material</type>
		<emission>
			<factor-prop>sim/model/f-14b/controls/VDI/brightness</factor-prop>
			<red>0.0</red>
			<green>0.9</green>
			<blue>0.0</blue>
		</emission>
	</animation>

	<animation>
		<object-name>symbols</object-name>
		<type>material</type>
		<emission>
			<factor-prop>controls/lighting/panel-norm</factor-prop>
			<red>0.55</red>
			<green>0.24</green>
			<blue>0.10</blue>
		</emission>
	</animation>

	<animation>
		<object-name>knobs</object-name>
		<type>material</type>
		<emission>
			<factor-prop>controls/lighting/panel-norm</factor-prop>
			<red>0.44</red>
			<green>0.192</green>
			<blue>0.08</blue>
		</emission>
	</animation>

	<animation>
		<object-name>casing</object-name>
		<type>material</type>
		<emission>
			<factor-prop>controls/lighting/panel-norm</factor-prop>
			<red>0.44</red>
			<green>0.192</green>
			<blue>0.08</blue>
		</emission>
	</animation>

</PropertyList>
