<PropertyList>

	<path>master-test-panel.ac</path>

	<animation>
		<type>select</type>
		<object-name>light-nogo</object-name>
		<condition>
               <property>sim/model/f-14b/lights/master-test-nogo</property>
				<greater-than>
					<property>/fdm/jsbsim/systems/electrics/ac-essential-bus1</property>
					<value>0</value>
				</greater-than>
		</condition>
	</animation>
	<animation>
		<object-name>light-nogo</object-name>
		<type>material</type>
		<emission> 
			<factor-prop>sim/model/f-14b/controls/lighting/index-norm</factor-prop>
			<red>1</red>
			<green>1</green>
			<blue>1</blue>
		</emission>
	</animation>
	<animation>
		<type>select</type>
		<object-name>light-go</object-name>
		<condition>
               <property>sim/model/f-14b/lights/master-test-go</property>
				<greater-than>
					<property>/fdm/jsbsim/systems/electrics/ac-essential-bus1</property>
					<value>0</value>
				</greater-than>
		</condition>
	</animation>
	<animation>
		<object-name>light-go</object-name>
		<type>material</type>
		<emission> 
			<factor-prop>sim/model/f-14b/controls/lighting/index-norm</factor-prop>
			<red>1</red>
			<green>1</green>
			<blue>1</blue>
		</emission>
	</animation>

	<animation>
		<type>pick</type>
		<visible>true</visible>
		<object-name>emerg-flt-hyd-guard-lever</object-name>
		<action>
			<button>0</button>
			<repeatable>false</repeatable>
			<binding>
				<command>property-toggle</command>
				<property>sim/model/f-14b/controls/electrics/emerg-flt-hyd-guard-lever</property>
			</binding>
			<binding>
    			<command>property-assign</command>
				<property>sim/model/f-14b/controls/electrics/emerg-flt-hyd-switch</property>
				<value>0</value>
			</binding>
		</action>
	</animation>

	<animation>
		<type>pick</type>
		<visible>true</visible>
		<object-name>master-test-switch</object-name>
		<action>
			<button>0</button>
			<repeatable>false</repeatable>
			<binding>
				<command>nasal</command>
				<script>f14.master_test_select_switch(1)</script>
			</binding>
		</action>
		<action>
			<button>1</button>
			<repeatable>false</repeatable>
			<binding>
				<command>nasal</command>
				<script>f14.master_test_select_switch(-1)</script>
			</binding>
		</action>
	</animation>

	<animation>
		<type>pick</type>
		<visible>false</visible>

		<object-name>hotspot-emerg-flt-hyd-low</object-name>
		<action>
			<button>0</button>
			<repeatable>false</repeatable>
			<binding>
    			<command>property-assign</command>
				<property>sim/model/f-14b/controls/electrics/emerg-flt-hyd-switch</property>
				<value>1</value>
			</binding>
		</action>
	</animation>

	<animation>
		<type>pick</type>
		<visible>false</visible>

		<object-name>hotspot-emerg-flt-hyd-high</object-name>
		<action>
			<button>0</button>
			<repeatable>false</repeatable>
			<binding>
    			<command>property-assign</command>
				<property>sim/model/f-14b/controls/electrics/emerg-flt-hyd-switch</property>
				<value>2</value>
			</binding>
		</action>
	</animation>
	<animation>
		<type>pick</type>
		<visible>false</visible>

		<object-name>hotspot-emerg-flt-hyd-auto</object-name>
		<action>
			<button>0</button>
			<repeatable>false</repeatable>
			<binding>
    			<command>property-assign</command>
				<property>sim/model/f-14b/controls/electrics/emerg-flt-hyd-switch</property>
				<value>0</value>
			</binding>
		</action>
	</animation>

	<animation>
		<type>rotate</type>
		<object-name>master-test-switch</object-name>
		<property>sim/model/f-14b/controls/electrics/master-test-switch</property>
		<interpolation>
<entry><ind>	0	</ind><dep>	0	</dep></entry>
<entry><ind>	1	</ind><dep>	50	</dep></entry>
<entry><ind>	2	</ind><dep>	69	</dep></entry>
<entry><ind>	3	</ind><dep>	88	</dep></entry>
<entry><ind>	4	</ind><dep>	107	</dep></entry>
<entry><ind>	5	</ind><dep>	126	</dep></entry>
<entry><ind>	6	</ind><dep>	225	</dep></entry>
<entry><ind>	7	</ind><dep>	244	</dep></entry>
<entry><ind>	8	</ind><dep>	263	</dep></entry>
<entry><ind>	9	</ind><dep>	282	</dep></entry>
<entry><ind>	10	</ind><dep>	301	</dep></entry>

		</interpolation>
		<center>
			<x-m>-0.0057</x-m>
			<y-m>-0.0142</y-m>
			<z-m> 0.0231</z-m>
		</center>
		<axis>
			<x>0</x>
			<y>0</y>
			<z>1</z>
		</axis>
	</animation>


	<animation>
		<type>rotate</type>
		<object-name>emerg-flt-hyd-switch</object-name>
		<property>sim/model/f-14b/controls/electrics/emerg-flt-hyd-switch</property>
		<interpolation>
			<entry><ind>0</ind><dep>50</dep></entry>
			<entry><ind>1</ind><dep>0</dep></entry>
			<entry><ind>2</ind><dep>-50</dep></entry>
		</interpolation>
		<center>
			<x-m>-0.0090</x-m>
			<y-m> 0.0631</y-m>
			<z-m> 0.0054</z-m>
		</center>
		<axis>
			<x>0</x>
			<y>1</y>
			<z>0</z>
		</axis>
	</animation>

	<animation>
		<type>rotate</type>
		<object-name>emerg-flt-hyd-guard-lever</object-name>
		<property>sim/model/f-14b/controls/electrics/emerg-flt-hyd-guard-lever</property>
		<factor>90</factor>
		<center>
			<x-m>-0.0295</x-m>
			<y-m> 0.0606</y-m>
			<z-m> 0.0076</z-m>
		</center>
		<axis>
			<x>0</x>
			<y>1</y>
			<z>0</z>
		</axis>
	</animation>

	<!-- lighting -->
	<animation> 
		<object-name>mount</object-name>
		<object-name>switches</object-name>
		<type>material</type>
        <condition>
            <greater-than>
                <property>/fdm/jsbsim/systems/electrics/ac-essential-bus1</property>
                <value>0</value>
            </greater-than>
            <not>
                <property>sim/rendering/rembrandt/enabled</property>
            </not>
        </condition>
        <emission> 
			<factor-prop>controls/lighting/dome-norm</factor-prop>
          <red>  1.000</red>
          <green>0.576</green>
          <blue> 0.161</blue>
          <red-prop>controls/lighting/dome-red</red-prop>
          <green-prop>controls/lighting/dome-green</green-prop>
          <blue-prop>controls/lighting/dome-blue</blue-prop>
        </emission>
	</animation>

    <!-- implicit ALS lighting see http://wiki.flightgear.org/ALS_technical_notes -->
    <effect>
      <name>f14panel</name>
      <inherits-from>Effects/f14panel</inherits-from>
      <object-name>panel</object-name>
    </effect>
    <effect>
      <name>f14panel-knob</name>
      <inherits-from>Effects/f14panel-knob</inherits-from>
      <object-name>master-test-switch</object-name>
    </effect>

</PropertyList>
