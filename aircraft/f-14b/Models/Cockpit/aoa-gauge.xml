<?xml version="1.0"?>

<PropertyList>

	<path>aoa-gauge.ac</path>

	<animation>
		<type>textranslate</type>
		<object-name>tape</object-name>
        <property>orientation/alpha-indicated-deg</property>
        <interpolation>
				<entry><ind>0</ind><dep>0</dep></entry> <!--clamp -->
				<entry><ind>30.0</ind><dep>0.5</dep></entry> <!--clamp -->
		</interpolation>
		<axis>
			<x>0</x>
			<y>-1</y>
		</axis>
	</animation>


	<!--lighting -->
	<animation>
		<object-name>mount</object-name>
		<type>material</type>
        <condition>
            <greater-than>
                <property>/fdm/jsbsim/systems/electrics/ac-essential-bus1</property>
                <value>0</value>
            </greater-than>
            <not>
                <property>/sim/rendering/rembrandt/enabled</property>
            </not>
        </condition>
        <emission>
            <factor-prop>controls/lighting/dome-norm</factor-prop>
            <red>  1.000</red>
            <green>0.576</green>
            <blue> 0.161</blue>
            <red-prop>controls/lighting/panel-red</red-prop>
            <green-prop>controls/lighting/panel-green</green-prop>
            <blue-prop>controls/lighting/panel-blue</blue-prop>
        </emission>
    </animation>

    <animation>
        <object-name>instrument</object-name>
        <type>material</type>
        <condition>
            <greater-than>
                <property>/fdm/jsbsim/systems/electrics/ac-essential-bus1</property>
                <value>0</value>
            </greater-than>
            <greater-than-equals>
                <property>controls/lighting/instruments-norm</property>
                <property>controls/lighting/dome-norm</property>
            </greater-than-equals>
            <not>
                <property>/sim/rendering/rembrandt/enabled</property>
            </not>
        </condition>
        <emission>
            <factor-prop>controls/lighting/instruments-norm</factor-prop>
            <red>  1.1000</red>
            <green>0.576</green>
            <blue> 0.161</blue>
            <red-prop>controls/lighting/instrument-red</red-prop>
            <green-prop>controls/lighting/instrument-green</green-prop>
            <blue-prop>controls/lighting/instrument-blue</blue-prop>

        </emission>
    </animation>
    <animation>
        <object-name>instrument</object-name>
        <type>material</type>
        <condition>
            <greater-than>
                <property>/fdm/jsbsim/systems/electrics/ac-essential-bus1</property>
                <value>0</value>
            </greater-than>
            <greater-than>
                <property>controls/lighting/dome-norm</property>
                <property>controls/lighting/instruments-norm</property>
            </greater-than>
            <not>
                <property>/sim/rendering/rembrandt/enabled</property>
            </not>
        </condition>
        <emission>
            <factor-prop>controls/lighting/dome-norm</factor-prop>
            <red>  1.1000</red>
            <green>0.576</green>
            <blue> 0.161</blue>
            <red-prop>controls/lighting/instrument-red</red-prop>
            <green-prop>controls/lighting/instrument-green</green-prop>
            <blue-prop>controls/lighting/instrument-blue</blue-prop>
        </emission>
    </animation>
    <effect>
        <name>f14-interior</name>
        <inherits-from>Effects/f14interior</inherits-from>
        <object-name>mount</object-name>
        <object-name>instrument</object-name>
    </effect>
</PropertyList>
