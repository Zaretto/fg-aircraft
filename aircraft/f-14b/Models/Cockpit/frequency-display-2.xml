<?xml version="1.0"?>

<PropertyList>

	<name>frequency-display-1</name>
	<path>radios-display.ac</path>

	<effect>
		<inherits-from>Effects/model-transparent</inherits-from>
		<object-name>digit-6</object-name>
		<object-name>digit-5</object-name>
		<object-name>digit-4</object-name>
		<object-name>digit-3</object-name>
		<object-name>digit-2</object-name>
		<object-name>digit-1</object-name>
		<object-name>dot</object-name>
	</effect>

	<!-- choose a label: VHF or UHF-VHF -->
	<animation>
		<type>select</type>
		<object-name>UHF</object-name>
		<condition>
				<property>null</property>
		</condition>
	</animation>

	<!-- Frequency Digital Display, ta-ta-ta da... -->
	<animation>
		<object-name>digits</object-name>
		<type>select</type>
		<condition>
            <greater-than>
                <property>/fdm/jsbsim/systems/electrics/ac-essential-bus1</property>
                <value>0</value>
            </greater-than>
            <not>
				<equals>
					<property>sim/model/f-14b/instrumentation/an-arc-182v/mode</property>
					<value>0</value>
				</equals>
			</not>
		</condition>
	</animation>

	<animation>
		<type>textranslate</type>
		<object-name>digit-1</object-name>
		<property>sim/model/f-14b/instrumentation/an-arc-182v/frequencies/selected-mhz</property>
		<factor>0.000001</factor>
		<offset>-100000</offset>
		<step>100000</step>
		<axis><y>-1</y></axis>
	</animation>
	<animation>
		<type>textranslate</type>
		<object-name>digit-2</object-name>
		<property>sim/model/f-14b/instrumentation/an-arc-182v/frequencies/selected-mhz</property>
		<factor>0.00001</factor>
		<offset>-10000</offset>
		<step>10000</step>
		<axis><y>-1</y></axis>
	</animation>
	<animation>
		<type>textranslate</type>
		<object-name>digit-3</object-name>
		<property>sim/model/f-14b/instrumentation/an-arc-182v/frequencies/selected-mhz</property>
		<factor>0.0001</factor>
		<offset>-1000</offset>
		<step>1000</step>
		<axis><y>-1</y></axis>
	</animation>
	<animation>
		<type>textranslate</type>
		<object-name>digit-4</object-name>
		<property>sim/model/f-14b/instrumentation/an-arc-182v/frequencies/selected-mhz</property>
		<factor>0.001</factor>
		<offset>-100</offset>
		<step>100</step>
		<axis><y>-1</y></axis>
	</animation>
	<animation>
		<type>textranslate</type>
		<object-name>digit-5</object-name>
		<property>sim/model/f-14b/instrumentation/an-arc-182v/frequencies/selected-mhz</property>
		<factor>0.01</factor>
		<offset>-10</offset>
		<step>10</step>
		<axis><y>-1</y></axis>
	</animation>
	<animation>
		<type>textranslate</type>
		<object-name>digit-6</object-name>
		<property>sim/model/f-14b/instrumentation/an-arc-182v/frequencies/selected-mhz</property>
		<factor>0.1</factor>
		<offset>-1</offset>
		<step>1</step>
		<axis><y>-1</y></axis>
	</animation>


	<!-- lighting -->
	<!-- lighting -->
    <animation>
        <object-name>mount</object-name>
        <type>material</type>
        <condition>
            <greater-than>
                <property>/fdm/jsbsim/systems/electrics/ac-essential-bus1</property>
                <value>0</value>
            </greater-than>
            <not>
                <property>/sim/rendering/rembrandt/enabled</property>
            </not>
        </condition>
        <emission>
            <factor-prop>controls/lighting/dome-norm</factor-prop>
            <red>  1.000</red>
            <green>0.576</green>
            <blue> 0.161</blue>
            <red-prop>controls/lighting/panel-red</red-prop>
            <green-prop>controls/lighting/panel-green</green-prop>
            <blue-prop>controls/lighting/panel-blue</blue-prop>

        </emission>
    </animation>
    <!-- implicit ALS lighting see http://wiki.flightgear.org/ALS_technical_notes -->
    <effect>
        <name>f14panel</name>
        <inherits-from>Effects/f14panel</inherits-from>
        <object-name>casing</object-name>
        <object-name>UHF</object-name>
        <object-name>UHF-VHF</object-name>
    </effect>
</PropertyList>
