	</animation>

	<!-- Autopilot Engage Switch -->
	<animation>
		<type>rotate</type>
		<object-name>engage-switch</object-name>
		<property>sim/model/f-14b/controls/AFCS/engage</property>
		<factor>60</factor>
		<center>
			<x-m>0.0260</x-m>
			<y-m>0.0</y-m>
			<z-m>0.0038</z-m>
		</center>
		<axis><y>-1</y></axis>
	</animation>
	<animation>
		<type>pick</type>
		<visible>true</visible>
		<object-name>hotspot-ap-engage</object-name>
		<action>
			<button>0</button>
