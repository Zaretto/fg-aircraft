<?xml version="1.0"?>

	<PropertyList>

	<path>afcs.ac</path>

	<animation>
		<type>select</type>
		<object-name>afcs</object-name>
		<condition>
			<equals>
				<property>sim/current-view/name</property>
				<value>Cockpit View</value>
			</equals>
		</condition>
	</animation>

	<!-- Stab Aug Pitch Switch -->
	<animation>
		<type>rotate</type>
		<object-name>stab-pitch-switch</object-name>
		<property>sim/model/f-14b/controls/SAS/pitch</property>
		<factor>60</factor>
		<center>
			<x-m>-0.0137</x-m>
			<y-m>0.0</y-m>
			<z-m>0.0038</z-m>
		</center>
		<axis><y>-1</y></axis>
	</animation>
	<animation>
		<type>pick</type>
		<visible>true</visible>
		<object-name>hotspot-sas-pitch</object-name>
		<action>
			<button>0</button>
			<repeatable>false</repeatable>
			<binding>
				<command>nasal</command>
				<script>f14_afcs.sas_pitch_toggle()</script>
			</binding>
		</action>
	</animation>

	<!-- Stab Aug Roll Switch -->
	<animation>
		<type>rotate</type>
		<object-name>stab-roll-switch</object-name>
		<property>sim/model/f-14b/controls/SAS/roll</property>
		<factor>60</factor>
		<center>
			<x-m>-0.0137</x-m>
			<y-m>0.0</y-m>
			<z-m>0.0038</z-m>
		</center>
		<axis><y>-1</y></axis>
	</animation>
	<animation>
		<type>pick</type>
		<visible>true</visible>
		<object-name>hotspot-sas-roll</object-name>
		<action>
			<button>0</button>
			<repeatable>false</repeatable>
			<binding>
				<command>nasal</command>
				<script>f14_afcs.sas_roll_toggle()</script>
			</binding>
		</action>
	</animation>

	<!-- Stab Aug Yaw Switch -->
	<animation>
		<type>rotate</type>
		<object-name>stab-yaw-switch</object-name>
		<property>sim/model/f-14b/controls/SAS/yaw</property>
		<factor>60</factor>
		<center>
			<x-m>-0.0137</x-m>
			<y-m>0.0</y-m>
			<z-m>0.0038</z-m>
		</center>
		<axis><y>-1</y></axis>
	</animation>
	<animation>
		<type>pick</type>
		<visible>true</visible>
		<object-name>hotspot-sas-yaw</object-name>
		<action>
			<button>0</button>
			<repeatable>false</repeatable>
			<binding>
				<command>nasal</command>
				<script>f14_afcs.sas_yaw_toggle()</script>
