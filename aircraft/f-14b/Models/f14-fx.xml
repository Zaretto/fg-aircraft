<?xml version="1.0"?>

<PropertyList>

	<!--<path>Aircraft/f-14b/Models/f14-fx.ac</path>-->
	<path>f14-fx.ac</path>
	<nopreview/>

	<effect>
		<inherits-from>Effects/model-transparent</inherits-from>
		<object-name>ShockWave</object-name>
		<object-name>ManeuverVortexR</object-name>
		<object-name>ManeuverVortexL</object-name>
		<object-name>HeatBlurR</object-name>
		<object-name>HeatBlurL</object-name>
		<object-name>InnerFlameR</object-name>
		<object-name>InnerFlameL</object-name>
		<object-name>outerFlame</object-name>
		<object-name>outerFlame.001</object-name>
		<object-name>ReheatL</object-name>
		<object-name>ReheatR</object-name>
</effect>


	<!-- disable heat blur on demand for ATI cards -->
	<animation>
		<type>select</type>
		<object-name>HeatBlurR</object-name>
		<object-name>HeatBlurL</object-name>
		<condition>
			<property>sim/model/f-14b/fx/heat-blur-on</property>
		</condition>
	</animation>

	<animation>
		<type>blend</type>
		<object-name>ReheatL</object-name>
		<property>engines/engine[0]/egt-norm</property>
		<offset>1.1</offset>
		<factor>-1</factor>
	</animation>

	<animation>
		<type>blend</type>
		<object-name>ReheatR</object-name>
		<property>engines/engine[0]/egt-norm</property>
		<offset>1.1</offset>
		<factor>-1</factor>
	</animation>

	<!-- Burner Flame -->
	<animation>
		<type>select</type>
		<object-name>outerFlame</object-name>
		<condition>
			<greater-than>
				<property>engines/engine[1]/afterburner</property>
				<value>0.1</value>
			</greater-than>
				<property>engines/engine[1]/running</property>
			<greater-than>
				<property>engines/engine[1]/n1</property>
				<value>90.0</value>
			</greater-than>
		</condition>
	</animation>
	<animation>
		<type>translate</type>
		<object-name>outerFlame</object-name>
		<factor>0.0</factor>
		<offset-m>8.682</offset-m>
		<axis>
			<x>9.835</x>
			<y>1.724</y>
			<z>-1.457</z>
		</axis>
	</animation>
	<animation>
		<type>scale</type>
		<object-name>outerFlame</object-name>
		<property>engines/engine[1]/nozzle-pos-norm</property>
		<x-factor>0.7</x-factor>
		<x-offset>1.0</x-offset>
		<y-factor>0.3</y-factor>
		<y-offset>1.0</y-offset>
		<z-factor>0.3</z-factor>
		<z-offset>1.0</z-offset>
	</animation>
	<animation>
		<type>translate</type>
		<object-name>outerFlame</object-name>  
		<factor>0.0</factor>
		<offset-m>-8.682</offset-m>
		<axis>
			<x>9.835</x>
			<y>1.724</y>
			<z>-1.457</z>
