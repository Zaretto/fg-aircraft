<?xml version="1.0"?>
<PropertyList>

<path>jrb-usn-gear-oil-tmp.ac</path>

<animation>
  <type>material</type>
  <object-name>GearOilTmpNeedle</object-name>
  <object-name>GearOilTmpFace</object-name>
  <emission>
  <red>   0.6 </red>
  <green> 0.3 </green>
  <blue>  0.3 </blue>
  <factor-prop>systems/electrical/outputs/instrument-lights</factor-prop>
  </emission> 
</animation>


<animation>
	<type>rotate</type>
	<object-name>GearOilTmpNeedle</object-name>
	<property>engines/engine[1]/gear-oil-temp-degf</property>
	<interpolation>
		<entry>
			<ind>-94</ind>
			<dep>-85</dep>
		</entry>
		<entry>
			<ind>302</ind>
			<dep>186</dep>
		</entry>
	</interpolation>
	<axis>
		<x>-1</x>
	</axis>
</animation>

<animation>
   <type>material</type>
   <object-name>GearOilTmpFace</object-name>
   <property-base>controls/lighting/panel/emission</property-base>
   <emission>
      <red-prop>red</red-prop>
      <green-prop>green</green-prop>
      <blue-prop>blue</blue-prop>
   </emission>
</animation>

<animation>
   <type>material</type>
   <property-base>controls/lighting/instruments/emission</property-base>
   <emission>
      <red-prop>red</red-prop>
      <green-prop>green</green-prop>
      <blue-prop>blue</blue-prop>
   </emission>
</animation>

<animation>
	<type>noshadow</type>
</animation>

<animation>
	<type>alpha-test</type>
	<alpha-factor>0.05</alpha-factor>
</animation>

<animation>
	<type>range</type>
	<min-m>0</min-m>
	<max-m>5</max-m>
</animation>

</PropertyList>
