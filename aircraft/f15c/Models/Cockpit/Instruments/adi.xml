<?xml version="1.0"?>
<PropertyList>

	<path>adi.ac</path>
    <animation>
        <type>scale</type>
        <x-offset>0.59</x-offset>
        <y-offset>0.59</y-offset>
        <z-offset>0.59</z-offset>
    </animation>

    <animation>
		<type>select</type>
		<object-name>off-flag</object-name>
		<condition>
            <not>
                <greater-than>
                    <property>/fdm/jsbsim/systems/electrics/ac-essential-bus1</property>
                    <value>0</value>
                </greater-than>
            </not>
        </condition>
	</animation>

	<animation>
		<type>rotate</type>
		<object-name>sphere</object-name>
		<property>instrumentation/attitude-indicator/indicated-roll-deg</property>
		<center>
			<x-m>0</x-m>
			<y-m>0.0</y-m>
			<z-m>0.0</z-m>
		</center>
		<axis>
			<x>1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>

	<animation>
		<type>rotate</type>
		<object-name>sphere</object-name>
		<property>instrumentation/attitude-indicator/indicated-pitch-deg</property>
		<center>
			<x-m>-0.0522</x-m>
			<y-m>0.0</y-m>
			<z-m>0.0023</z-m>
		</center>
		<axis>
			<x>0</x>
			<y>1</y>
			<z>0</z>
		</axis>
	</animation>

	<animation>
		<type>translate</type>
		<object-name>turn-indicator</object-name>
		<property>instrumentation/turn-indicator/indicated-turn-rate</property>
		<factor>0.0114</factor>
		<axis><y>1</y></axis>
		<min-m>-0.0185</min-m>
		<max-m>0.0185</max-m>
	</animation>
	<!--based on 1.08 indicated-turn-rate corresponding to a standard 360Â° turn in 2 minutes at cruise configuration (FL 320 M0.72) -->

	<!-- ILS mode -->
	<animation>
		<type>select</type>
		<object-name>ils-flag</object-name>
		<condition>
			<or>
				<equals>
					<property>sim/model/instruments/nav/selector-ils</property>
					<value>false</value>
				</equals>
                <not>
                    <greater-than>
                        <property>/fdm/jsbsim/systems/electrics/ac-essential-bus1</property>
                        <value>0</value>
                    </greater-than>
                </not>
                <equals>
					<property>instrumentation/nav[0]/in-range</property>
					<value>false</value>
				</equals>
			</or>
		</condition>
	</animation>

	<animation>
		<type>select</type>
		<object-name>glide-slope-index</object-name>
		<condition>
			<equals>
                <property>sim/model/instruments/nav/selector-ils</property>
                <value>true</value>
			</equals>
            <greater-than>
                <property>/fdm/jsbsim/systems/electrics/ac-essential-bus1</property>
                <value>0</value>
            </greater-than>
		</condition>
	</animation>

	<animation>
		<type>translate</type>
		<object-name>glide-slope-index</object-name>
		<property>instrumentation/nav[0]/gs-needle-deflection</property>
		<interpolation>
			<entry>
				<ind>-2.5</ind>
				<dep>-0.036</dep>
			</entry>
			<entry>
				<ind>0</ind>
				<dep>0</dep>
			</entry>
			<entry>
				<ind>2.5</ind>
				<dep>0.036</dep>
			</entry>
		</interpolation>
		<axis>
			<x>-0.087</x>
			<y>0</y>
			<z>1</z>
		</axis>
	</animation>

	<animation>
		<type>rotate</type>
		<object-name>bank-index</object-name>
		<property>instrumentation/attitude-indicator/indicated-roll-deg</property>
		<min-deg>-120</min-deg>
		<max-deg>120</max-deg>
		<center>
			<x-m>-0.0015</x-m>
			<y-m>0</y-m>
			<z-m>0.0064</z-m>
		</center>
		<axis>
			<x>-1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>

	<!-- ADI's bars in steering mode -->
	<animation>
		<type>select</type>
		<object-name>yaw-steering-bar</object-name>
		<condition>
			<equals>
                <property>sim/model/instruments/nav/selector-ptr</property>
				<value>false</value>
			</equals>
		</condition>
	</animation>

	<animation>
		<type>translate</type>
		<object-name>yaw-steering-bar</object-name>
		<condition>
			<equals>
                <property>sim/model/instruments/nav/selector-ptr</property>
                <value>false</value>
			</equals>
		</condition>
		<property>controls/flight/aileron</property>
		<factor>0.025</factor>
		<axis>
			<x>0</x>
			<y>1</y>
			<z>0</z>
		</axis>
	</animation>

	<animation>
		<type>select</type>
		<object-name>pitch-steering-bar</object-name>
		<condition>
			<equals>
                <property>sim/model/instruments/nav/selector-ptr</property>
                <value>false</value>
			</equals>
		</condition>
	</animation>

	<animation>
		<type>translate</type>
		<object-name>pitch-steering-bar</object-name>
		<condition>
			<equals>
                <property>sim/model/instruments/nav/selector-ptr</property>
                <value>false</value>
			</equals>
		</condition>
		<property>controls/flight/elevator</property>
		<factor>0.03</factor>
		<axis>
			<x>0</x>
			<y>0</y>
			<z>1</z>
		</axis>
	</animation>

<!-- ADI's bars in homing mode -->

	<animation>
		<type>select</type>
		<object-name>nav-yaw-steering-bar</object-name>
		<condition>
            <property>sim/model/instruments/nav/selector-ptr</property>
            <property>instrumentation/nav[2]/in-range</property>
			<equals>
				<property>sim/model/instrumentation/vhf/mode</property>
				<value>2</value>
			</equals>
			<greater-than>
				<property>sim/model/instrumentation/vhf/selector</property>
				<value>2</value>
			</greater-than>
		</condition>
	</animation>

	<animation>
		<type>translate</type>
		<object-name>nav-yaw-steering-bar</object-name>
		<property>sim/model/instrumentation/vhf/homing-deviation</property>
		<factor>0.0012</factor>
		<min-m>-0.0331</min-m>
		<max-m>0.0330</max-m>
		<axis>
			<x>0</x>
			<y>1</y>
			<z>0</z>
		</axis>
	</animation>

	<animation>
		<type>select</type>
		<object-name>nav-pitch-steering-bar</object-name>
		<condition>
            <property>sim/model/instruments/nav/selector-ptr</property>
            <property>instrumentation/nav[2]/in-range</property>
			<equals>
				<property>sim/model/instrumentation/vhf/mode</property>
				<value>2</value>
			</equals>
			<greater-than>
				<property>sim/model/instrumentation/vhf/selector</property>
				<value>2</value>
			</greater-than>
		</condition>
	</animation>

	<animation>
		<type>translate</type>
		<object-name>nav-pitch-steering-bar</object-name>
		<property>instrumentation/nav[2]/nav-distance</property>
		<interpolation>
			<entry>
				<ind>0</ind>
				<dep>0</dep>
			</entry>
			<entry>
				<ind>50000</ind>
				<dep>-0.030</dep>
			</entry>
			<entry>
				<ind>600000</ind>
				<dep>-0.030</dep>
			</entry>
		</interpolation>
		<axis>
			<x>0</x>
			<y>0</y>
			<z>1</z>
		</axis>
	</animation>

	<!-- course-flag -->
	<animation>
		<type>select</type>
		<object-name>course-flag</object-name>
		<condition>
			<or>
				<and>
                    <property>sim/model/instruments/nav/selector-ptr</property>
                    <not>
						<property>instrumentation/nav[2]/in-range</property>
					</not>
					<equals>
						<property>sim/model/instrumentation/vhf/mode</property>
						<value>2</value>
					</equals>
					<greater-than>
						<property>sim/model/instrumentation/vhf/selector</property>
						<value>2</value>
					</greater-than>
				</and>
                <not>
                    <greater-than>
                        <property>/fdm/jsbsim/systems/electrics/ac-essential-bus1</property>
                        <value>0</value>
                    </greater-than>
                </not>
            </or>
		</condition>
	</animation>

	<!-- slip-ball-->
	<animation>
		<type>rotate</type>
		<object-name>slip-ball</object-name>
		<property>instrumentation/slip-skid-ball/indicated-slip-skid</property>
		<factor>8</factor>
		<min-deg>-11</min-deg>
		<max-deg>11</max-deg>
		<center>
			<x-m>0</x-m>
			<y-m>0</y-m>
			<z-m>0.0279031</z-m> 
		</center>
		<axis>
			<x>-1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>

	<!-- lighting -->

	<animation>
		<object-name>ext</object-name>
		<type>material</type>
        <condition>
            <greater-than>
                <property>/fdm/jsbsim/systems/electrics/ac-essential-bus1</property>
                <value>0</value>
            </greater-than>
            <not>
                <property>sim/rendering/rembrandt/enabled</property>
            </not>
            <not>
                <property>sim/rendering/rembrandt/enabled</property>
            </not>
        </condition>
        <emission>
			<factor-prop>controls/lighting/panel-norm</factor-prop>
			<red>0.385</red>
			<green>0.168</green>
			<blue>0.07</blue>
		</emission>
	</animation>

	<animation>
		<object-name>instr</object-name>
		<type>material</type>
        <condition>
            <greater-than>
                <property>/fdm/jsbsim/systems/electrics/ac-essential-bus1</property>
                <value>0</value>
            </greater-than>
            <not>
                <property>sim/rendering/rembrandt/enabled</property>
            </not>
            <not>
                <property>sim/rendering/rembrandt/enabled</property>
            </not>
        </condition>
        <emission>
			<factor-prop>controls/lighting/instruments-norm</factor-prop>
			<red>0.55</red>
			<green>0.24</green>
			<blue>0.10</blue>
		</emission>
	</animation>

	<animation>
		<type>range</type>
		<min-m>0</min-m>
		<max-m>5</max-m>
	</animation>

</PropertyList>
